{
  "features": {
    "languageSwitcher": true,
    "themeSwitcher": true,
    "sections": {
      "experience": true,
      "skills": true,
      "education": true,
      "blog": true,
      "contact": {
        "showContactInfo": true,
        "showMessageForm": true
      }
    }
  },
  "theme": {
    "default": "light",
    "colors": {
      "light": {
        "background": "#F5F5F5",
        "surface": "#FFFFFF",
        "secondary": "#333333",
        "primary": "#2497FF"
      },
      "dark": {
        "background": "#121212",
        "surface": "#1E1E1E",
        "secondary": "#E0E0E0",
        "primary": "#2497ff"
      }
    }
  },
  "language": {
    "default": "en",
    "supported": ["tr", "en"]
  },
  "email": {
    "serviceId": "service_cv",
    "templateId": "template_cv",
    "publicKey": "your-emailjs-public-key",
    "privateKey": "your-emailjs-private-key"
  },
  "api": {
    "blog": {
      "feedUrl": "https://medium.com/feed/@cogalanemre",
      "revalidateTime": 3600
    }
  },
  "security": {
    "cors": {
      "origins": {
        "production": ["https://emrecogalan.com"],
        "development": ["http://localhost:3000"]
      },
      "methods": ["GET", "POST"],
      "credentials": true
    }
  }
} 